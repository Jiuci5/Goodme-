.container {
  padding: 20rpx;
  height: 97vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 36rpx;
  font-weight: bold;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.back {
  margin-right: 20rpx;
}

.form-content {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.form-value {
  color: #333;
}

.bold {
  font-weight: bold;
}

.divider {
  height: 1rpx;
  background-color: #eee;
  margin: 20rpx 0;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #eee;
}

.page-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.page-btn image {
  width: 40rpx;
  height: 40rpx;
}

.page-info {
  margin: 0 40rpx;
  font-size: 28rpx;
  color: #666;
}