.label {
  display: block;
  margin: 5px 0;
  font-size: 14px;
}

.input, .phone-input {
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.picker {
  display: block;
  width: 50px;
  margin-right: 10px;
  float: left;
}

.picker-text {
  margin: 0 auto;
  text-align: center;
  
  border: 1px solid #ddd;
  border-radius: 4px;
}

.textarea {
  width: 100%;
  height: 80px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.submit-btn {
  margin-top: 20px;
  background-color: #842D1F;
  color: white;
}