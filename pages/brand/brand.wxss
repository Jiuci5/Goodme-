/* 公共样式 */
page{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
    box-sizing: border-box;
}
/* 首图 */
.index-brand{
  background: linear-gradient(#ffffff, #842D1F);
  height: 670px;
}
.brand-text{
  font-size:20px;
  margin: 20rpx;
  font-weight:bold
}

  .text-into{
    width: 330px;
    margin: 0 auto;
  }
  .text-item{
    font-size: 17px;
    margin: 10px ;
  }
  .brand-tup{
    width: 350px;
    margin: 0 auto;
    padding-top: 10px;
  }
  .tup-item{
    position: relative; 
    width: 350px;
    height: 75px;
    margin: 10px 0 ;
    background-color: rgb(255, 255, 255);
    border-radius: 50px;
  }
  .tup-item>image{
    top: 15px;
    left: 23px;
    position: absolute;
    width: 40px;
    height: 40px;
  }
  .tup-into{
    position: absolute;
    font-size: 15px;
    width: 230px;
    margin-left: 95px;
    top: 5px;
  }
  .tup-i{
    position: absolute;
    font-weight:bold ;
    color:#842D1F ;
    margin-left: 70px;
    top: 14px;
    font-size:30px;
    width: 10px;
  }
/* 加盟申请 */
