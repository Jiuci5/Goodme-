/* 公共样式 */
page{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
    box-sizing: border-box;
}
.index-process{
  background: linear-gradient(#ffffff, #842D1F);
  height: 670px;
}
.process-text{
  font-size:20px;
  margin: 20rpx;
  font-weight:bold
}
.process-into{
  margin-top: 5px;
position: relative;
width: 100%;
height: 100px;
}
.process-num{
  position: absolute;
  width: 75px;
  height: 75px;
  font-size: 80px;
  top: 10px;
  left: 25px;
}
.process-tetx{
  top: 20px;
  left: 120px;
  font-weight:bold;
  position: absolute;
  width: 100px;
}
.text-tetx{

  margin-top: 5px;
  position: absolute;
  width: 200px;
  top: 40px;
  left: 120px;
  padding-bottom: 5px;
  border-bottom: 1px dashed ;
}
.index-process>image{
  margin: 5px 5px 5px  20px;
  width: 350px;
  height: 200px;
}
/* 加盟申请 */
.apply-text{
  font-size: 20px;
  margin: 20rpx;
  font-weight:bold;  margin: 20rpx;
  font-weight:bold;
}
.index-apply {
  width: 355px;
  height: 720rpx;
  margin: 10px 0;
}
.apply-item {
  margin: 15px ;
}
.apply-into {
  margin: 15px ;
}

.label {
  display: block;
  margin: 5px 0;
  font-size: 14px;
}

.input, .phone-input {
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.picker {
  display: block;
  width: 50px;
  margin-right: 10px;
  float: left;
}

.picker-text {
  margin: 0 auto;
  text-align: center;
  
  border: 1px solid #ddd;
  border-radius: 4px;
}

.textarea {
  width: 100%;
  height: 80px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.submit-btn {
  margin-top: 20px;
  background-color: #842D1F;
  color: white;
}