<view class="container">

  <view class="tabs">
    <view 
      class="tab {{currentTab === '全部' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="全部"
    >全部</view>
    <view 
      class="tab {{currentTab === '待支付' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="待支付"
    >待支付</view>
    <view 
      class="tab {{currentTab === '进行中' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="进行中"
    >进行中</view>
    <view 
      class="tab {{currentTab === '已完成' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="已完成"
    >已完成</view>
    <view 
      class="tab {{currentTab === '已取消' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="已取消"
    >已取消</view>
    <view 
      class="tab {{currentTab === '售后中' ? 'active' : ''}}" 
      bindtap="switchTab" 
      data-tab="售后中"
    >售后中</view>
  </view>
  
  <view class="order-list">
    <block wx:for="{{filteredOrders}}" wx:key="orderNo">
      <view class="order-item">
        <view class="order-header">
          <text>订单号：{{item.orderNo}}</text>
          <text class="status">{{item.status}}</text>
        </view>
        <view class="order-content">
          <text class="title">{{item.title}}</text>
          <text class="desc">{{item.desc}}</text>
          <view class="price">
            <text class="current-price">¥{{item.currentPrice}}</text>
            <text class="original-price">¥{{item.originalPrice}}</text>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>