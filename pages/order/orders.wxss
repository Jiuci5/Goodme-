.container {
  padding: 20rpx;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  font-size: 36rpx;
  font-weight: bold;
}

.back {
  margin-right: 20rpx;
}

.tabs {
  display: flex;
  white-space: nowrap;
  overflow-x: auto;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  padding: 20rpx 30rpx;
  flex-shrink: 0;
}

.tab.active {
  color: #07C160;
  border-bottom: 2rpx solid #07C160;
}

.order-list {
  margin-bottom: 100rpx;
}

.order-item {
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}

.status {
  color: #07C160;
}

.order-content {
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.desc {
  display: block;
  color: #666;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.price {
  text-align: right;
}

.current-price {
  color: #f40;
  font-weight: bold;
}

.original-price {
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
  font-size: 24rpx;
}

.order-footer {
  display: flex;
  justify-content: flex-end;
}

.order-footer button {
  margin-left: 20rpx;
}