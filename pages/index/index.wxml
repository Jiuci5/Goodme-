<!-- 加盟日记 -->
<image src="/image/zhaoshang.png" mode="" class="index-zhaoshang"/>
<view class="index-face">
  <strong style="margin-left: 20px; font-weight:bold ;color:#842D1F ;font-size:20px"> | </strong>
  <text class="face-text">加盟日记</text>
  <!-- 文章列表页 -->
  <view class="container">
  <view class="article-list">
    <block wx:for="{{articles}}" wx:key="id">
      <view class="article-item" bindtap="goToDetail" data-id="{{item.id}}">
        <text class="title">{{item.title}}</text>
        <text class="summary">{{item.summary}}</text>
        <view class="meta">
          <text>{{item.date}}</text>
          <text class="meta-text">{{item.views}}人阅读</text>
        </view>
      </view>
    </block>
  </view>
</view>
</view>
<!-- 加盟申请 -->
<view class="index-apply">
  <strong style="margin-left: 15px; font-weight:bold ;color:#842D1F ;font-size:20px"> | </strong>
  <text class="apply-text">加盟申请</text>
  <view class="apply-item">
    <text class="label">您的姓名：</text>
    <input class="input" placeholder="请输入姓名" bindinput="onNameInput" />
  </view>
  <view class="apply-item">
    <text class="label">手机号码：</text>
    <picker class="picker" mode="selector" range="{{areaCodes}}" range-key="name" bindchange="onAreaCodeChange">
      <view class="picker-text">{{selectedAreaCode}}</view>
    </picker>
    <input class="phone-input" type="number" placeholder="请输入手机号码" bindinput="onPhoneInput" style="width: 300px;"/>
  </view>
  <view class="apply-item">
    <text class="label">您的意向城市：</text>
    <input class="input" placeholder="请输入您的意向城市" bindinput="onCityInput" />
  </view>
  <view class="apply-item">
    <text class="label">留言：</text>
    <textarea class="textarea" placeholder="请输入" bindinput="onMessageInput"></textarea>
  </view>
  <button class="submit-btn" bindtap="onSubmit">马上提交</button>
</view>