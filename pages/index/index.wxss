/* 公共样式 */
page{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
    box-sizing: border-box;
}
/* 首图 */
.index-img{
  width: 100%;
  height: 1060rpx;
  margin: 0 auto;
}
/* 功能展示 */
.index-info{
  margin: 10px 0 ;
  width:100%;
  height: 130rpx;

}
.info-item{
  margin-left: 23px;
  display: block;
  text-align: center;
  width: 130rpx;
  height: 130rpx;
  float: left;
 
}
.info-item>image{
  width: 80rpx;
  height: 80rpx;
}
.info-item>text{
  float: left;
}
/* 产品介绍 */
.index-into{
  margin: 0 auto;
  width: 100%;
  height: 850rpx;
}
.into-item{
  padding-left: 18px;
}
.into-text{
  font-size: 20px;
  margin: 20rpx;
  font-weight:bold
}
.into-into{
  width: 300rpx;
  height: 350rpx;
  float: left;
  margin: 10px;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
}
.into-into>text{
  display: block;
  text-align: center;
}
.into-into>image{
  width: 300rpx;
  height: 300rpx;
}
/* 门店介绍 */
.index-store{
  margin: 0 auto;
  width: 100%;
  height: 1200rpx;
}
.store-text{
  font-size: 20px;
  margin: 20rpx;
  font-weight:bold
}
.store-item{
  width: 100%;
  height: 1050rpx;
  display: block;
}
.store-into{
  margin-top: 5px;
  width: 320px;
  height: 550rpx;
  margin-left: 30px;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.5);
}
.store-into>image{
  float: left;
}
.store-into>text{
  float: left;
  font-size: 20px;
  margin: 10px;
}

.index-zhaoshang{
  width: 100%;
  height: 150px;
  border-radius: 50px;
  margin-bottom: 15px;
}
/* 加盟日记 */
.index-face{
  margin: 0  auto;
  width: 100%;
}
.face-text{
  font-size: 20px;
  margin: 20rpx;
  font-weight:bold
}
.article-list {
  margin:  20px;
}
.article-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  
}
.title {
  font-size: 32rpx;
  font-weight: bold;
}
.summary {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin: 10rpx 0;
}
.meta {
  font-size: 24rpx;
  color: #999;
}
.meta-text{
  margin-left: 10px;
}

/* 加盟申请 */
.apply-text{
  font-size: 20px;
  margin: 20rpx;
  font-weight:bold;
}
.index-apply {
  width: 100%;
  height: 720rpx;
  margin: 0 auto;
}
.apply-item {
  margin: 15px ;
}
.apply-into {
  margin: 15px ;
}

.label {
  display: block;
  margin: 5px 0;
  font-size: 14px;
}

.input, .phone-input {
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.picker {
  display: block;
  width: 50px;
  margin-right: 10px;
  float: left;
}

.picker-text {
  margin: 0 auto;
  text-align: center;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.textarea {
  width: 100%;
  height: 80px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  box-sizing: border-box;
}

.submit-btn {
  margin-top: 20px;
  background-color: #842D1F;
  color: white;
}